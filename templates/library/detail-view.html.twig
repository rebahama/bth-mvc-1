{% extends 'base.html.twig' %}

{% block title %}Book Details{% endblock %}

{% block body %}
    <h1>Book Details</h1>

    <div class="grid-container-dynamic">
        <div class="detail-book-page">
            <h2>{{ library.title }}</h2>
            <p><strong>Author:</strong> {{ library.author }}</p>
            <p><strong>ISBN:</strong> {{ library.isbn }}</p>

            {% if library.image_path %}
                <img src="{{ asset(library.image_path) }}" alt="Book image" style="width: 100%;">
            {% else %}
                <p>No image available.</p>
            {% endif %}
        </div>
        <div class="crud-btn-container">
        <a href="{{ path('library_view_all') }}" class="custom-btn" >Back to all books</a>

        <a href="{{ path('library_update', { id: library.id }) }}" class="custom-btn">Update book</a>
          {% include 'library/forms/delete-form.html.twig' with { id: library.id } %}
          </div>
    </div>
{% endblock %}
